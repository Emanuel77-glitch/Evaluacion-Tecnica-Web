@model Evaluacion_Tecnica_Web.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <h3>¿Está seguro que desea eliminar este producto?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.categoria)
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
