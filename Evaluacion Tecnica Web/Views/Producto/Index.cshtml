@model IEnumerable<Evaluacion_Tecnica_Web.Models.Producto>

<h1 class="mb-4">Gestión de Productos</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Filtrar productos</h6>
    </div>
    <div class="card-body">
        <form method="get" class="form-inline">
            <div class="form-group mr-3">
                <select name="category" onchange="this.form.submit()" class="form-control">
                    <option value="">Seleccione una categoría</option>
                    <option value="Todas">Todas las categorías</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <span class="font-weight-bold">Precio promedio: $@ViewBag.AvaragePrice.ToString("N2")</span>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Productos</h6>
        <a asp-action="Create" class="btn btn-primary">Agregar Producto</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Categoría</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.id</td>
                            <td>@product.nombre</td>
                            <td>@product.Precio.ToString("C")</td>
                            <td>@product.categoria</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@product.id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
